&lt;/span>&lt;span class="lnt">7
&lt;/span>&lt;/code>&lt;/pre>&lt;/td>
&lt;td class="lntd">
&lt;pre tabindex="0" class="chroma">&lt;code class="language-bash" data-lang="bash">&lt;span class="line">&lt;span class="cl">&lt;span class="nb">cd&lt;/span> &amp;lt;Folder hugo site của bạn&amp;gt;
&lt;/span>&lt;/span>&lt;span class="line">&lt;span class="cl">&lt;span class="nb">cd&lt;/span> content
&lt;/span>&lt;/span>&lt;span class="line">&lt;span class="cl">mkdir -p posts/assets
&lt;/span>&lt;/span>&lt;span class="line">&lt;span class="cl">mkdir -p content/templates
&lt;/span>&lt;/span>&lt;span class="line">&lt;span class="cl">mkdir -p layouts/_default/_markup
